[Unit]
Description=LinkedPilot AI Comment Server
After=network.target ollama.service
Wants=ollama.service

[Service]
Type=simple
User=linkedpilot
Group=linkedpilot
WorkingDirectory=/var/www/linkedpilot-ai
EnvironmentFile=/var/www/linkedpilot-ai/.env
ExecStart=/var/www/linkedpilot-ai/venv/bin/uvicorn ai_server:app --host 127.0.0.1 --port 8000 --workers 1
Restart=on-failure
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=linkedpilot-ai

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/www/linkedpilot-ai

[Install]
WantedBy=multi-user.target
