[Unit]
Description=LinkedPilot AI Comment Server
Documentation=https://github.com/linkedpilot
After=network.target ollama.service
Wants=ollama.service

[Service]
Type=simple
User=linkedpilot
Group=linkedpilot
WorkingDirectory=/opt/linkedpilot-ai
EnvironmentFile=/opt/linkedpilot-ai/.env
ExecStart=/opt/linkedpilot-ai/venv/bin/uvicorn ai_server:app --host 0.0.0.0 --port 8000 --workers 1
Restart=on-failure
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=linkedpilot-ai

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/linkedpilot-ai

[Install]
WantedBy=multi-user.target
